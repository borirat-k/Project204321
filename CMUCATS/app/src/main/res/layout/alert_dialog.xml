<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="36dp"
        android:text="จำนวนวิชาที่อาจารย์ต้องการเพิ่มในตารางสอน"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/count_edt"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="จำนวนวิชา"
        android:inputType="number"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@+id/heading"
        app:layout_constraintStart_toStartOf="@+id/heading"
        app:layout_constraintTop_toBottomOf="@+id/heading" />

    <TextView
        android:id="@+id/tv_semester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="ปีการศึกษาที่สอน"
        app:layout_constraintStart_toStartOf="@+id/count_edt"
        app:layout_constraintTop_toBottomOf="@+id/count_edt" />

    <EditText
        android:id="@+id/et_semester"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="1/25.."
        android:inputType="textAutoComplete"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@+id/count_edt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/count_edt"
        app:layout_constraintTop_toBottomOf="@+id/tv_semester" />
</android.support.constraint.ConstraintLayout>