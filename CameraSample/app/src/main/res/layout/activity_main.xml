<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.akexorcist.cameraapi.MainActivity">

    <Button
        android:id="@+id/btnCameraApiV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camera_api_v1"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="0.502" />

    <Button
        android:id="@+id/btnCameraApiV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camera_api_v2"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCameraApiV1"
        app:layout_constraintStart_toStartOf="@+id/btnCameraApiV1"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="@+id/btnCameraApiV1"
        app:layout_constraintHorizontal_bias="1.0" />

</android.support.constraint.ConstraintLayout>
